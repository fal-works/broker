package broker.math;

class Constants {
	/**
		π
	**/
	public static extern inline final PI: Float = 3.141592653589793;

	/**
		2π
	**/
	public static extern inline final TWO_PI: Float = 2 * PI;

	/**
		-π
	**/
	public static extern inline final MINUS_PI: Float = -PI;

	/**
		2π
	**/
	public static extern inline final HALF_PI: Float = PI / 2;

	/**
		2π
	**/
	public static extern inline final MINUS_HALF_PI: Float = MINUS_PI / 2;
}
